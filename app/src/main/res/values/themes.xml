    <style name="AppTheme.Science" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/scienceMonsterColorPrimary</item>
        <item name="colorPrimaryDark">@color/scienceMonsterColorPrimaryDark</item>
        <item name="colorAccent">@color/scienceMonsterColorAccent</item>
        <item name="colorSecondary">@color/scienceMonsterColorSecondary</item>
