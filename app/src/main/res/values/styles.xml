<resources>


    <style name="AppTheme.CookieMonster.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar">
        <item name = "windowActionBar">false</item>
    <item name = "windowNoTitle">true</item> </style>


    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/pt_sans_narrow_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">13.5sp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ToolbarTextAppearance">
        <item name="android:fontFamily">@font/marker_felt_wide</item>
        <item name="android:letterSpacing">0.07</item>
    </style>

    <style name="AppTheme.CookieMonster.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="TextInputLayoutWhiteBox" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense" >
    <item name="boxStrokeColor">@color/white</item>
    </style>
    <style name="HeadlineTextStyle">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
        <item name="android:textSize">23sp</item>
        <item name="android:letterSpacing">0.07</item>
        <item name="android:fontFamily">@font/marker_felt_wide</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="IconsTextStyleNoColor">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Caption</item>
        <item name="android:textSize">16dp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:fontFamily">@font/pt_sans_narrow_bold</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="InputTextStyleNoColor">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Caption</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:fontFamily">@font/pt_sans_narrow_bold</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextStyleBody">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:fontFamily">@font/pt_sans_narrow_bold</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextStyleBodyRegular">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:fontFamily">@font/pt_sans_narrow_bold</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="NormalTextStyleWhite">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:fontFamily">@font/pt_sans_narrow_bold</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">?attr/colorPrimaryDark</item>
        <item name="android:textSize">18sp</item>
    </style>


</resources>
